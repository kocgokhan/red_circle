<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/prev_songname"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/prev_play"
        android:layout_toRightOf="@+id/prev_play"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/prev_songartist"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prev_songname"
        android:layout_toEndOf="@+id/prev_play"
        android:layout_toRightOf="@+id/prev_play"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/prev_songname"
        app:layout_constraintTop_toBottomOf="@+id/prev_songname" />

    <ImageButton
        android:id="@+id/album_track_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:src="@mipmap/album_track_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/album_track_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>