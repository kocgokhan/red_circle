<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FindSongFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="403dp"
        android:layout_height="425dp"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardSong"
            android:layout_width="match_parent"
            android:layout_height="870dp">


            <ImageView
                android:id="@+id/prev_play"
                android:layout_width="401dp"
                android:layout_height="411dp"
                android:adjustViewBounds="true"
                android:alpha="0.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/set_profile_image"
                android:layout_width="50dp"
                android:layout_height="43dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="48dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="@+id/prev_play"
                app:layout_constraintTop_toTopOf="@+id/prev_play" />

            <TextView
                android:id="@+id/set_user_name"
                android:layout_width="166dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/set_profile_image"
                app:layout_constraintTop_toTopOf="@+id/prev_play" />

            <TextView
                android:id="@+id/set_user_username"
                android:layout_width="166dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/set_profile_image"
                app:layout_constraintTop_toBottomOf="@+id/set_user_name" />


            <ImageView
                android:id="@+id/like_post"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:src="@mipmap/like"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/prev_play" />

            <TextView
                android:id="@+id/set_post_text"
                android:layout_width="332dp"
                android:layout_height="68dp"
                android:layout_marginTop="12dp"
                android:gravity="clip_vertical"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.478"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/set_post_image" />


            <com.santalu.aspectratioimageview.AspectRatioImageView
                android:id="@+id/set_post_image"
                android:layout_width="334dp"
                android:layout_height="120dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_demo"
                app:ari_ratio="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/set_profile_image"
                app:siRadius="2dp"
                app:siSquare="true" />

            <TextView
                android:id="@+id/count_like"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="12K"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toStartOf="@+id/like_post"
                app:layout_constraintTop_toTopOf="@+id/prev_play" />

            <ImageView
                android:id="@+id/unlike_post"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:src="@drawable/liked_btn"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/prev_play" />


            <com.santalu.aspectratioimageview.AspectRatioImageView
                android:id="@+id/back_song_name"
                android:layout_width="334dp"
                android:layout_height="61dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/post_text_back"
                app:ari_ratio="0.1"
                app:layout_constraintBottom_toBottomOf="@+id/set_post_image"
                app:layout_constraintEnd_toEndOf="@+id/set_post_image"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/set_post_image"
                app:siRadius="2dp"
                app:siSquare="true" />

            <TextView
                android:id="@+id/song_name"
                android:layout_width="270dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/back_song_name"
                app:layout_constraintTop_toTopOf="@+id/back_song_name" />

            <ImageButton
                android:id="@+id/play_song_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/transparent"
                android:src="@mipmap/red"
                app:layout_constraintBottom_toBottomOf="@+id/set_post_image"
                app:layout_constraintEnd_toEndOf="@+id/back_song_name"
                app:layout_constraintTop_toTopOf="@+id/back_song_name"
                app:layout_constraintVertical_bias="0.363" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


