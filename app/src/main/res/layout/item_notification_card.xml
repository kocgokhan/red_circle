<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/transparent"
    android:fadeScrollbars="true"
    android:isScrollContainer="true"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbars="horizontal"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/song_image_post"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="8dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="197dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/song_image_post"
            android:layout_toRightOf="@+id/song_image_post"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/follow_accept_btn"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/comment"
            android:layout_alignBottom="@+id/comment"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="11dp"
            android:layout_toStartOf="@+id/follow_cancel_btn"
            android:layout_toEndOf="@+id/comment"
            android:background="@color/transparent"
            android:src="@mipmap/accept_btn"
            tools:visibility="gone" />

        <ImageButton
            android:id="@+id/follow_cancel_btn"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/comment"
            android:layout_alignBottom="@+id/comment"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="12dp"
            android:background="@color/transparent"
            android:src="@mipmap/cancel_btn"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/like_song_image"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/comment"
            android:layout_alignBottom="@+id/comment"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="13dp"
            android:src="@mipmap/top1"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/like_post_image"
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/comment"
            android:layout_alignBottom="@+id/comment"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="13dp"
            android:layout_toStartOf="@+id/like_song_image"
            android:layout_toEndOf="@+id/comment"
            android:src="@mipmap/top1"
            tools:visibility="gone" />

        <ImageButton
            android:id="@+id/request_send"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/comment"
            android:layout_alignBottom="@+id/comment"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="15dp"
            android:background="@color/transparent"
            android:src="@mipmap/waiting_follow"
            tools:visibility="gone" />

        <ImageButton
            android:id="@+id/follow_user"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/comment"
            android:layout_alignBottom="@+id/comment"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="15dp"
            android:background="@color/transparent"
            android:src="@mipmap/follow_user_btn"
            tools:visibility="gone" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>